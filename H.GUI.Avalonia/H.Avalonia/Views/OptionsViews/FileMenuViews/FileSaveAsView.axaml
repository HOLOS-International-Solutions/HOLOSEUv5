<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="H.Avalonia.FileSaveAsView">
	
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="Save As"  HorizontalAlignment="Center" Margin="0,0,0,15" FontWeight="Bold" FontSize="30" Foreground="#696969"/>
		<StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 20">
			<TextBox Text="{Binding Path=NewFarmName}" Watermark="Enter a farm name" Margin="0 15 0 0" Foreground="#696969" BorderBrush="#EDEDED" BorderThickness="2" FontWeight="SemiBold"/>
			<Button Content="Save" Command="{Binding SaveAsCommand}" Margin="0 15 0 0" HorizontalAlignment="Center"/>
		</StackPanel>
	</StackPanel>
</UserControl>
