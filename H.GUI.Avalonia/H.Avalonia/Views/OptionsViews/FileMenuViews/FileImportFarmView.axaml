<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="650"
			 xmlns:properties="clr-namespace:H.Core.Properties;assembly=H.Core"
			 xmlns:viewSections="clr-namespace:H.Avalonia"
             x:Class="H.Avalonia.Views.OptionsViews.FileMenuViews.FileImportFarmView">

	<StackPanel Spacing="25" HorizontalAlignment="Center" VerticalAlignment="Center">

		<StackPanel Spacing="30"  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel >
				<TextBlock Text="Import Farm"  HorizontalAlignment="Center" Margin="0,0,0,15" FontWeight="Bold" FontSize="20" Foreground="#696969"/>
				<Button Content="Select Farm" Click="OnSelectFarmOption_Clicked" HorizontalAlignment="Center"/>
			</StackPanel>
			<Border BorderBrush="#EDEDED" BorderThickness="0,0,1,0" Margin="20,0" Height="" />
			<StackPanel >
				<TextBlock Text="Bulk Import Farm"  HorizontalAlignment="Center" Margin="0,0,0,15" FontWeight="Bold" FontSize="20" Foreground="#696969"/>
				<Button  Content="Select Folder" Click="OnSelectFolderOption_Clicked" HorizontalAlignment="Center"/>
			</StackPanel>

			
		</StackPanel>

		<StackPanel>
			<TextBlock Classes="disclaimer" IsVisible="{Binding ShowGrid}" Text="{x:Static properties:Resources.LabelMultipleSelection}" >
			</TextBlock>

			<DataGrid Name="FarmsDataGrid" SelectionChanged="FarmsDataGrid_SelectionChanged" IsVisible="{Binding ShowGrid}" SelectedItem="{Binding Path=SelectedFarm}" ItemsSource="{Binding Farms}"  AutoGenerateColumns="False" SelectionMode="Extended" Margin="0 10 0 0" Padding="20" GridLinesVisibility="All" IsReadOnly="True" Height="250" BorderThickness="2"  BorderBrush="#EDEDED" CornerRadius="10" Background="#f5f5f5">
				<DataGrid.Styles>
					<Style Selector="DataGridColumnHeader">
						<Setter Property="FontWeight" Value="Bold" />
						<Setter Property="FontSize" Value="14" />
					</Style>
				</DataGrid.Styles>
				<DataGrid.Columns>
					<DataGridTextColumn Header="{x:Static properties:Resources.LabelFarmName}" Binding="{Binding Name}"  />
					<DataGridTextColumn Header="{x:Static properties:Resources.LabelComments}" Binding="{Binding Comments}"  />
					<DataGridTextColumn Header="{x:Static properties:Resources.LabelCreatedOn}" Binding="{Binding DateCreated}" />
					<DataGridTextColumn Header="{x:Static properties:Resources.LabelModifiedOn}" Binding="{Binding DateModified}"  />
					<DataGridTextColumn Header="{x:Static properties:Resources.LabelGuid}" Binding="{Binding Guid}"  />
				</DataGrid.Columns>
			</DataGrid>
			

			<Button Content="Import" IsEnabled="{Binding CanImport}" Command="{Binding ImportFarms}" Margin="0 15 0 0" HorizontalAlignment="Center" IsVisible="{Binding ShowGrid}"/>
		</StackPanel>

		
	</StackPanel>
</UserControl>
