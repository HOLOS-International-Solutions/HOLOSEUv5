<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="H.Avalonia.Views.SupportingViews.Start.StartView">

		<StackPanel  VerticalAlignment="Center"> 
			<TextBlock FontSize="81" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center">Holos v5</TextBlock>
			<ProgressBar Margin="0 10 0 0" Height="20" Width="70" Minimum="0" Maximum="100" Value="{Binding Path=ProgressValue}" Foreground="Green"/>
			<TextBlock FontSize="14" Margin="0 10 0 0" HorizontalAlignment="Center" Text="{Binding Path=IsBusyMessage}"/>
		</StackPanel>

	
</UserControl>