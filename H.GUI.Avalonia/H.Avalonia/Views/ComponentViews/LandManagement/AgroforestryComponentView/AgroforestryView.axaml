<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="H.Avalonia.AgroforestryView">

	<UserControl.Resources>
		<Thickness x:Key="DefaultMargin">10,10,10,10</Thickness>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<!-- Step 1 -->
			<RowDefinition Height="Auto"/>
			<!-- Step 2 -->
			<RowDefinition Height="Auto"/>
			<!-- Step 3 Heading -->
			<RowDefinition Height="*"/>
			<!-- Tabs -->
		</Grid.RowDefinitions>

		<!-- Step 1: Agroforestry Type Selection -->
		<Border Grid.Row="0"
                Margin="0,0,0,8"
                BorderThickness="1"
                BorderBrush="Gray"
                CornerRadius="4">
			<StackPanel>
				<TextBlock Margin="10,10,10,2"
                           FontWeight="Bold"
                           FontSize="15"
                           Text="Agroforestry #1"/>
				<TextBlock Margin="10,2,10,8"
                           FontWeight="Bold"
                           FontSize="13"
                           Text="Step 1: Please choose your desire Agroforestry type:"/>
				<ComboBox Width="180" Height="24" FontSize="12" Margin="10,0,10,10">
					<ComboBoxItem Content="Silvo Arable"/>
					<ComboBoxItem Content="Silvo Pastoral"/>
					<ComboBoxItem Content="Hedgerows"/>
					<ComboBoxItem Content="Orchard"/>
					<ComboBoxItem Content="Farm Garden"/>
				</ComboBox>
			</StackPanel>
		</Border>

		<!-- Step 2: Tree Information (Compact) -->
		<Border Grid.Row="1"
                Margin="0,0,0,8"
                BorderThickness="1"
                BorderBrush="Gray"
                CornerRadius="4">
			<StackPanel>
				<TextBlock Margin="10,10,10,10"
                           FontWeight="Bold"
                           FontSize="13"
                           Text="Step 2: Please share the Observation year, Agroforestry tree's information:"/>
				<Grid Margin="10,0,10,10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="3*"/>
					</Grid.ColumnDefinitions>
					<Grid.RowDefinitions>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
						<RowDefinition Height="Auto"/>
					</Grid.RowDefinitions>

					<!-- Observation Year -->
					<TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"
                               Text="Observation Year :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="0" Grid.Column="1"
                                   Minimum="0" Maximum="2100" Value="1"
                                   Height="24" FontSize="12" Margin="0,2"/>

					<!-- Tree Species -->
					<TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"
                               Text="Tree Species :" Margin="0,2" FontSize="12"/>
					<ComboBox Grid.Row="1" Grid.Column="1"
                              Height="24" FontSize="12" Margin="0,2">
						<ComboBoxItem Content="Ash"/>
						<ComboBoxItem Content="Oak"/>
						<ComboBoxItem Content="Pine"/>
						<ComboBoxItem Content="Maple"/>
					</ComboBox>

					<!-- Planting Year -->
					<TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
                               Text="Planting Year :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="2" Grid.Column="1"
                                   Minimum="0" Maximum="2100" Value="0"
                                   Height="24" FontSize="12" Margin="0,2"/>

					<!-- Seedlings Age (Year) -->
					<TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"
                               Text="Seedlings Age (Year) :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="3" Grid.Column="1"
                                   Minimum="0" Maximum="200" Value="0"
                                   Height="24" FontSize="12" Margin="0,2"/>

					<!-- Average Tree Height (cm) -->
					<TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"
                               Text="Average Tree height (cm) :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="4" Grid.Column="1"
                                   Minimum="0" Maximum="100000" Value="0.0005" Increment="0.0001"
                                   FormatString="F4" Height="24" FontSize="12" Margin="0,2"/>

					<!-- Average Tree Diameter at the breast Height (cm) -->
					<TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"
                               Text="Average Tree Diameter at the breast Height (cm) :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="5" Grid.Column="1"
                                   Minimum="0" Maximum="100000" Value="0.0005" Increment="0.0001"
                                   FormatString="F4" Height="24" FontSize="12" Margin="0,2"/>

					<!-- Number of Trees -->
					<TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"
                               Text="Number of Trees :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="6" Grid.Column="1"
                                   Minimum="0" Maximum="1000000" Value="0"
                                   Height="24" FontSize="12" Margin="0,2"/>

					<!-- Cutting Year -->
					<TextBlock Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"
                               Text="Cutting Year :" Margin="0,2" FontSize="12"/>
					<NumericUpDown Grid.Row="7" Grid.Column="1"
                                   Minimum="0" Maximum="2100" Value="0"
                                   Height="24" FontSize="12" Margin="0,2"/>
				</Grid>
			</StackPanel>
		</Border>

		<!-- Step 3 Heading -->
		<TextBlock Grid.Row="2"
                   Margin="10,0,0,10"
                   FontWeight="Bold"
                   FontSize="13"
                   TextWrapping="Wrap"
                   Text="Step 3: Please share the details information on your Agroforestry system:"/>

		<!-- Tabs (compact) -->
		<Grid Grid.Row="3">
			<TabControl Background="White" TabStripPlacement="Top" FontSize="12" Height="210">
				<TabItem Header="Plantation Area">
					<TextBlock Margin="{StaticResource DefaultMargin}" Text="Plantation Area Tab Content"/>
				</TabItem>
				<TabItem Header="Tree Spacing">
					<TextBlock Margin="{StaticResource DefaultMargin}" Text="Tree Spacing Tab Content"/>
				</TabItem>
				<TabItem Header="Management Practices">
					<TextBlock Margin="{StaticResource DefaultMargin}" Text="Management Practices Tab Content"/>
				</TabItem>
				<TabItem Header="Logging">
					<TextBlock Margin="{StaticResource DefaultMargin}" Text="Logging Tab Content"/>
				</TabItem>
				<TabItem Header="Economics">
					<TextBlock Margin="{StaticResource DefaultMargin}" Text="Economics Tab Content"/>
				</TabItem>
			</TabControl>
		</Grid>
	</Grid>
</UserControl>
