<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:properties="clr-namespace:H.Core.Properties;assembly=H.Core"
			 xmlns:viewSections="clr-namespace:H.Avalonia"
             x:Class="H.Avalonia.FileOpenFarmView">
	
	<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
		<TextBlock Text="{x:Static properties:Resources.LabelOpenAnExistingFarm}"
                   HorizontalAlignment="Center" Margin="0,0,0,30" FontWeight="Bold" FontSize="20" Foreground="#696969" />
		
		<viewSections:FarmDataGridSharedView/>
		
		<StackPanel Orientation="Vertical" Width="160">
			<Button Content="{x:Static properties:Resources.ButtonOpen}" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch" Command="{Binding NavigateToNextPage}" Margin="0 120 0 0" />
		</StackPanel>
	</StackPanel>
</UserControl>
