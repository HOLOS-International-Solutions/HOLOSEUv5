<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<targets>
		<!-- File target -->
		<target xsi:type="File" name="fileTarget"
		        fileName="logs/app-${shortdate}.log"
		        layout="${longdate} ${uppercase:${level}} ${logger} ${message} ${exception:format=tostring}" />

		<!-- Console target -->
		<target xsi:type="Console" name="consoleTarget"
		        layout="${time} [${uppercase:${level}}] ${message}" />

		<!-- Debug target for Visual Studio Output window -->
		<target xsi:type="Debugger" name="debugTarget"
		        layout="${time} [${uppercase:${level}}] ${logger}: ${message}" />
	</targets>

	<rules>
		<!-- Log everything from Info level and above to file -->
		<logger name="*" minlevel="Info" writeTo="fileTarget" />

		<!-- Log everything from Debug level and above to console -->
		<logger name="*" minlevel="Debug" writeTo="consoleTarget" />

		<!-- Log everything from Debug level and above to VS Debug window -->
		<logger name="*" minlevel="Debug" writeTo="debugTarget" />
	</rules>
</nlog>